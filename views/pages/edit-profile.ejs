    <section class="profile-section" id="profil">
        <div class="foto">
            <div class="row align-items-center justify-content-center">
                <div class="col edit-foto">
                    <div class="profile-pic-div">
                        <img src="" id="photo">
                        <input type="file" id="file">
                        <label for="file" id="uploadBtn">Pilih Foto</label>
                    </div>
                </div>
            </div>
            <div class="row  align-items-center justify-content-center">
                <div class="col txt-upload">
                    <input type="file" id="file">
                    <label for="file" id="uploadTxt">Ganti Photo Profil</label>
                </div>
            </div>
        </div>
        <div class="form">
            <form action="#" method="post" id="form">
                <div class="row">
                    <div class="form-group nama col-5">
                        <label for="first-name">Nama Depan</label>
                        <input type="text" class="form-control" placeholder="Ketikkan nama depan Anda " id="first-name"
                            name="firstname">
                    </div>
                    <div class="form-group nama col-5">
                        <label for="last-name">Nama Belakang</label>
                        <input type="text" class="form-control" placeholder="Ketikkan nama belakang Anda "
                            id="last-name" name="lastname">
                    </div>
                </div>
                <div class="form-group password col-11">
                    <label for="password" class="d-block">Kata Sandi</label>
                    <input id="password" type="password" class="form-control pwstrength" data-indicator="pwindicator"
                        name="password" aria-describedby="passwordHelpInline" placeholder="Ketikkan kata sandi Anda ">
                    <div id="pwindicator" class="pwindicator">
                        <div class="bar"></div>
                        <div class="label"></div>
                    </div>
                </div>
                <div class="form-group password col-11">
                    <label for="password2" class="d-block">Masukkan Ulang Kata Sandi</label>
                    <input id="password2" type="password" class="form-control"
                        placeholder="Masukkan ulang kata sandi Anda ">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-lg text-capitalize">Simpan Perubahan</button>
                </div>
            </form>
        </div>
    </section>

