<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0 shrink-to-fit=no">

    <link rel="icon" type="image/png" sizes="16x16" href="img/favicon.jpg">
    <link rel="icon" type="image/png" sizes="32x32" href="img/favicon.jpg">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <!-- font googleapis -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- fontawesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
        integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <!-- Local CSS -->
    <link href="/css/profile-user.css" rel="stylesheet">

    <!-- Title -->
    <title>Gotjeh: Profil Kamu</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg fixed-top" id="sideNav">
        <div class="sidebar">
            <center><img src="/img/avatar-pict.jpg" class="photo-profil">
                <p class="nama">
                    <%= resultUserData.firstname + ' ' + resultUserData.lastname %> </a>
                </p>
                <a class="btn btn-edit" href="/profile/edit/<%= resultUserData.id %> ">Edit Profil</a>
                <p><a href="/" class="txt">Beranda</a></p>
                <p><a href="/job" class="txt">Pekerjaan</a></p>
                <p><a href="/course" class="txt">Kursus</a></p>
                <p><a href="/faq" class="txt">F.A.Q</a></p>
                <p><a href="/about" class="txt">Tentang Kami</a></p>
                <p><a href="/logout" class="txt">Keluar</a></p>
            </center>
            <br>
            <!-- Copyright -->
            <div id="footer">
                <p>Copyright Â©
                    <script>
                        document.write(new Date().getFullYear());
                    </script> Gotjeh
                </p>
            </div>
            <!-- End of Copyright -->
        </div>
    </nav>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8 jumlah-kelas">
                <div class="row">
                    <div class="col">
                        <div class="left">
                            <p class="atas">
                                <%= resultUserCourse.length %>
                            </p>
                            <p class="bawah">Semua Kelas</p>
                        </div>
                    </div>
                    <div class="col">
                        <div class="center">
                            <p class="atas">
                                <% let totalDesain=0 %>
                                    <% for( let index=0; index < resultUserCourse.length; index++ ) { %>
                                        <% if (resultUserCourse[index].course_details.category.name=='Desain' ) { %>
                                            <% totalDesain +=1 %>
                                                <% } %>
                                                    <% } %>
                                                        <%= totalDesain %>
                            </p>
                            <p class="bawah">Kelas Desain</p>
                        </div>
                    </div>
                    <div class="col">
                        <div class="left">
                            <p class="atas">
                                <% let totalDigitalMarketing=0 %>
                                    <% for( let index=0; index < resultUserCourse.length; index++ ) { %>
                                        <% if (resultUserCourse[index].course_details.category.name=='Digital Marketing'
                                            ) { %>
                                            <% totalDigitalMarketing +=1 %>
                                                <% } %>
                                                    <% } %>
                                                        <%= totalDigitalMarketing %>
                            </p>
                            <p class="bawah">Kelas Digital Marketing</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row ml-auto add-course">
            <div class="col-6" style="margin-left: -15px;">
                <a class="btn btn-add" href="/course">Tambah Kursus</a>
            </div>
            <div class="col-2">
                <div class="bar-srch">
                    <input type="text" style="width: 580px; margin-left: -32px;" name="search" placeholder="Search">
                </div>
            </div>
        </div>
        <div class="row kursus">
            <% for( let index=0; index < resultUserCourse.length; index++ ) { %>
                <div class="col-lg course">
                    <a href="/course/tutorials/<%= resultUserCourse[index].course_id %>"><img class="foto"
                            src="/img/branding-course.jpg" alt="1"></a>
                    <div class="free">
                        <p>Gratis</p>
                    </div>
                    <div class="ds-kursus">
                        <a href="/course/tutorials/<%= resultUserCourse[index].course_id %>" class="ds-course">
                            <p>
                                <%= resultUserCourse[index].course_details.title %>
                            </p>
                        </a>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
</body>

</html>